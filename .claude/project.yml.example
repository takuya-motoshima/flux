# Claude Code エージェントパック - プロジェクト設定ファイル
# このファイルを .claude/project.yml にコピーして使用してください

# プロジェクト基本情報
project:
  name: my-awesome-project
  type: fullstack  # frontend/backend/fullstack/cli/library
  description: プロジェクトの簡単な説明

  # 使用言語・フレームワーク
  languages:
    - typescript
    - python

  frameworks:
    - react
    - fastapi

  # パッケージマネージャー
  package_manager: npm  # npm/yarn/pnpm/pip/cargo/go

# テスト設定
testing:
  framework: vitest  # vitest/jest/pytest/go-test/cargo-test
  coverage_target: 80  # カバレッジ目標（%）
  test_command: npm run test  # カスタムテストコマンド

  # テストファイルのパターン
  patterns:
    - "**/*.test.ts"
    - "**/*.spec.ts"

# コーディング規約
coding_standards:
  # TypeScript/JavaScript
  typescript:
    no_any: true
    strict_null_checks: true
    prefer_const: true
    max_line_length: 120
    formatter: prettier

  # Python
  python:
    max_line_length: 120
    formatter: black
    linter: ruff
    type_checking: mypy

  # Go
  go:
    formatter: gofmt
    linter: golangci-lint

  # Rust
  rust:
    formatter: rustfmt
    linter: clippy

# ビルド設定
build:
  tool: vite  # vite/webpack/esbuild/rollup
  output_dir: dist
  command: npm run build

# セキュリティ設定
security:
  # 検出対象
  check_hardcoded_secrets: true
  check_sql_injection: true
  check_xss: true
  check_command_injection: true

  # 許可する unsafe パターン（例外）
  allowed_unsafe:
    - "test/**/*.ts"  # テストコードでは一部緩和

# ドキュメント設定
documentation:
  auto_generate_readme: true
  api_spec_format: openapi  # openapi/swagger/graphql
  include_architecture_doc: true

# エージェント設定
agents:
  # orchestrator設定
  orchestrator:
    auto_detect_project: true  # プロジェクト情報を自動検出

  # planner設定
  planner:
    output_file: docs/DESIGN.md

  # coder設定
  coder:
    max_function_lines: 30  # 関数の最大行数
    prefer_async_await: true

  # tester設定
  tester:
    auto_detect_framework: true
    generate_coverage_report: true

  # reviewer設定
  reviewer:
    output_file: REVIEW.md
    severity_levels:
      - critical
      - warning
      - info

  # documenter設定
  documenter:
    update_on_change: true
    formats:
      - markdown
      - openapi

# カスタムコマンド
commands:
  dev: npm run dev
  test: npm run test
  build: npm run build
  lint: npm run lint
  format: npm run format

# 無視するファイル・ディレクトリ
ignore:
  - node_modules/
  - dist/
  - build/
  - .git/
  - "**/*.min.js"
  - "**/*.bundle.js"
